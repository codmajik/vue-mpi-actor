{
  "compilerOptions": {
    "lib": [
      "es2020",
      "DOM"
    ],
    // this enables stricter inference for data properties on `this`
    
    "jsx": "preserve",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "declaration": true
  },
  "files": [
    "src/index.ts",
    "src/vue-properties.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}